# NEURON v2.0 Environment Configuration
# Copy this to .env and fill in your values

# Database
NEURON_DB_PATH=./data/neuron.db

# LLM Provider (ollama, nvidia, anthropic, openai, siliconflow)
NEURON_DEFAULT_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# NVIDIA API Configuration
NVIDIA_API_KEY=nvapi-your-key-here
NVIDIA_MODEL=qwen/qwen3.5-397b-a17b

# Anthropic API Configuration
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o

# SiliconFlow API Configuration
SILICON_API_KEY=your-siliconflow-key
SILICON_MODEL=deepseek-ai/DeepSeek-V3

# Server Configuration
NEURON_HOST=0.0.0.0
NEURON_PORT=8000
